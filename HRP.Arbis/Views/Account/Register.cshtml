@model HRP.Arbis.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}
<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Kayıt Ol</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Assets/vendor/bootstrap/css/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Assets/vendor/fonts/circular-std/style.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Assets/libs/css/style.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Assets/vendor/fonts/fontawesome/css/fontawesome-all.css")" />
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
        }
    </style>
</head>

<body>
    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center">
                <a href="/Home/Index">
                    <img class="logo-img" src="@Url.Content("~/Assets/images/logo.png")" alt="logo">
                </a><span class="splash-description">Lütfen Hesap Bilgilerinizi Giriniz</span>
                @Html.AntiForgeryToken()
            </div>
            @Html.ValidationSummary()
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <input class="form-control form-control-lg" name="email" id="email" type="text" placeholder="Kurum Kodunuz" autocomplete="on">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" name="schoolName" id="schoolName" type="text" placeholder="Okul Adı" autocomplete="on">
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Kayıt Ol</button>
                }
            </div>           
        </div>
    </div>
    <script src="@Url.Content("~/Assets/vendor/jquery/jquery-3.3.1.min.js")"></script>
    <script src="@Url.Content("~/Assets/vendor/bootstrap/js/bootstrap.bundle.js")"></script>
</body>

</html>


