@model HRP.Arbis.Models.LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}
<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Login</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="@Url.Content("~/Assets/vendor/bootstrap/css/bootstrap.min.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Assets/vendor/fonts/circular-std/style.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Assets/libs/css/style.css")" />
    <link rel="stylesheet" href="@Url.Content("~/Assets/vendor/fonts/fontawesome/css/fontawesome-all.css")" />
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: -ms-flexbox;
            display: flex;
            -ms-flex-align: center;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
        }
    </style>
</head>
<body>
    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center">
                <a href="/Home/Index">
                    <img class="logo-img" src="@Url.Content("~/Assets/images/logo.png")" alt="logo">
                </a><span class="splash-description">Lütfen Hesap Bilgilerinizi Giriniz</span>
                @Html.AntiForgeryToken()
            </div>
            @Html.ValidationSummary()
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    <div class="form-group">
                        <input class="form-control form-control-lg" name="Email" id="Email" type="text" placeholder="Kurum Kodunuz" autocomplete="on">
                    </div>
                    <div class="form-group">
                        <input class="form-control form-control-lg" name="Password" id="Password" type="password" placeholder="Şifreniz">
                    </div>                
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Giriş Yap</button>
                }
            </div>
            <div class="card-footer bg-white p-0">
                <div class="card-footer-item card-footer-item-bordered">
                    <a href="/Account/ForgotPassword" class="footer-link">Şifremi Unuttum</a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>